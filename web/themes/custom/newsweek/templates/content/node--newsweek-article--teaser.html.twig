{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
{% set images_style = {
  '#theme':      'image_style',
  '#style_name': 'teaser',
  '#uri':        node.field_main_image.entity.field_media_image.entity.fileuri,
} %}
{{ attach_library('bartik/classy.node') }}
<article{{ attributes.addClass(classes) }}>
  <header>
  {% if images_style %}
    {{ images_style }}
  {% endif %}
  {% if content.field_tags %}
    {{ content.field_tags }}
  {% endif %}
    {% if content.field_special_content %}
      <div class="exclusive-and-content">
        {{ content.field_special_content }}
        {{ title_prefix }}
        {% if label and not page %}
          <h2{{ title_attributes.addClass('node__title') }}>
            <a href="{{ url }}" rel="bookmark">{{ label }}</a>
          </h2>
        {% endif %}
        {{ title_suffix }}
      </div>
    {% else %}
      {{ title_prefix }}
      {% if label and not page %}
        <h2{{ title_attributes.addClass('node__title') }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {% endif %}
      {{ title_suffix }}
    {% endif %}
  </header>
  <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
    {{ content|without('field_tags', 'field_main_image', 'field_special_content') }}
  </div>
</article>
